<Window x:Class="FurnitureApp.Views.DirectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FurnitureApp.Views"
        mc:Ignorable="d"
        Title="Экран директора" Height="450" Width="289" Background="#FFACACAC">
    <Grid>
        <Button Content="Учет оборудования" HorizontalAlignment="Left" Margin="30,40,0,0" VerticalAlignment="Top" Width="229" Height="55" FontSize="20" FontFamily="Arial" Click="Button_OpenEquipAccWin_Click"/>
        <Button Content="Учет материалов" HorizontalAlignment="Left" Margin="30,100,0,0" VerticalAlignment="Top" Width="229" Height="55" FontSize="20" FontFamily="Arial" Click="Button_OpeMaterAccWin_Click"/>
        <Button Content="Учет фурнитуры" HorizontalAlignment="Left" Margin="30,160,0,0" VerticalAlignment="Top" Width="229" Height="55" FontSize="20" FontFamily="Arial" Click="Button_OpeFurnAccWin_Click"/>
        <Button x:Name="button" Content="Выход на форму авторизации" HorizontalAlignment="Left" Margin="50,355,0,0" VerticalAlignment="Top" Width="180" Height="40" Click="button_Exit_Click"/>
        <Label x:Name="UserField" Content="Пользователь: " HorizontalAlignment="Left" Margin="50,9,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
